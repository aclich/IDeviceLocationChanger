{
  "name": "location-simulator",
  "version": "1.0.0",
  "description": "GPS location simulator for iOS devices",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:vite": "vite",
    "dev:electron": "electron .",
    "dev:browser": "concurrently -k -n backend,frontend -c blue,green \"python-backend/.venv/bin/python python-backend/main.py --http\" \"vite\"",
    "backend": "python-backend/.venv/bin/python python-backend/main.py --http",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:backend": "cd python-backend && .venv/bin/pytest",
    "test:all": "npm run test:run && npm run test:backend"
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^27.0.1",
    "vite": "^5.0.10",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.locationsimulator.app",
    "productName": "Location Simulator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "python-backend/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "extraResources": [
      {
        "from": "python-backend",
        "to": "python-backend"
      }
    ]
  }
}
